
1 -------prometheus---------

helm repo add prometheus-community https://prometheus-community.github.io/helm-charts
helm repo update

helm install prometheus -f prometheus_values.yaml  prometheus-community/prometheus

helm upgrade prometheus -f prometheus_values.yaml  prometheus-community/prometheus

helm delete prometheus


3 -------grafana---------



helm repo add grafana https://grafana.github.io/helm-charts

helm repo update


helm install grafana -f grafana_values.yaml grafana/grafana
helm upgrade grafana  -f grafana_values.yaml  grafana/grafana


helm delete grafana



2 -------jaegertracing---------

helm repo add jaegertracing https://jaegertracing.github.io/helm-charts

helm upgrade jaeger -f jaeger_values.yaml  jaegertracing/jaeger

helm install  jaeger -f jaeger_values.yaml  jaegertracing/jaeger


helm delete jaeger


4444  -------kiali---------

helm repo add kiali-server https://kiali.org/helm-charts
helm repo update


helm install kiali-server --namespace istio-system -f kiali_values.yaml   kiali-server/kiali-server

helm upgrade kiali-server --namespace istio-system -f kiali_values.yaml   kiali-server/kiali-server


helm upgrade kiali-server kiali-server/kiali-server
